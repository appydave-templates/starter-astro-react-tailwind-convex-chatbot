---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Debug Chat - AI Assistant">
  <div class="h-screen bg-gray-100 dark:bg-gray-900">
    <div id="debug-root" class="h-full border-2 border-red-500">
      <div class="p-4 bg-yellow-100 text-black">
        <h2>Debug: Component should load here</h2>
        <p>If you see this, the HTML is working but React is not mounting.</p>
      </div>
    </div>
  </div>

  <script>
    console.log('=== DEBUG CHAT SCRIPT START ===');
    
    // Check if React is available
    console.log('React available:', typeof React !== 'undefined');
    
    // Check if the DOM element exists
    const debugRoot = document.getElementById('debug-root');
    console.log('Debug root element:', debugRoot);
    
    if (debugRoot) {
      debugRoot.innerHTML = `
        <div class="flex h-full">
          <!-- Debug Sidebar -->
          <div class="w-80 bg-blue-100 border-r border-blue-300 flex-shrink-0">
            <div class="p-4">
              <h2 class="text-lg font-semibold text-blue-900 mb-4">Debug Sidebar</h2>
              <button 
                onclick="alert('Plus button clicked!')"
                class="p-2 bg-blue-500 text-white rounded-lg hover:bg-blue-600 transition-colors"
              >
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                </svg>
              </button>
              <div class="mt-4">
                <p class="text-sm text-blue-700">This is a debug sidebar with vanilla JS</p>
              </div>
            </div>
          </div>
          
          <!-- Debug Chat Area -->
          <div class="flex-1 bg-white dark:bg-gray-800 flex items-center justify-center">
            <div class="text-center">
              <h2 class="text-xl font-semibold text-gray-700 dark:text-gray-300 mb-2">Debug Chat Area</h2>
              <p class="text-gray-500 dark:text-gray-400">This proves the HTML structure works</p>
            </div>
          </div>
        </div>
      `;
    }
    
    console.log('=== DEBUG CHAT SCRIPT END ===');
  </script>
</Layout>